@{
    @model TheProjector.Data.ViewModels.PersonViewViewModel;
ViewData["Title"] = @Model.BasicInfo.FullName;
}

<div>
    <div class="mb-3">
        <h4>@Model.BasicInfo.FullName</h4>
    </div>



    <div class="row">
        <div class="col-md-2">
            <p>Projects assigned to:</p>
        </div>
        <table class="table table-sm">
            <colgroup>
                <col class="col-11">
                <col class="col-1">
            </colgroup>
            <thead>
                <th>Project</th>
                <th>Actions</th>
            </thead>
            <tbody>
                @foreach (var project in Model.AssignedProjects)
                {
                    <tr>
                        <td>@project.Name</td>
                        <td>
                            <a asp-action="View" asp-controller="Projects" asp-route-id="@project.Id">
                                View
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>